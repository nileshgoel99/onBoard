<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/button"
        style="?android:attr/buttonStyle"
        android:layout_width="350dip"
        android:layout_height="100dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:src="@drawable/bs" />

        <TextView
            android:layout_width="150dip"
            android:paddingLeft="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="With more details on the yacht set to emerge over..."
            android:textColor="@android:color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button2"
        style="?android:attr/buttonStyle"
        android:layout_width="350dip"
        android:layout_height="100dip"
        android:gravity="center"
        android:layout_below="@id/button"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:src="@drawable/cop" />

        <TextView
            android:layout_width="150dip"
            android:paddingLeft="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="Corporate Social Responsibility is a management ..."
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button3"
        style="?android:attr/buttonStyle"
        android:layout_width="350dip"
        android:layout_height="100dip"
        android:gravity="center"
        android:layout_below="@id/button2"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:src="@drawable/bas" />

        <TextView
            android:layout_width="150dip"
            android:paddingLeft="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="Work and Life Policy concept whereby companies ..."
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button4"
        style="?android:attr/buttonStyle"
        android:layout_width="350dip"
        android:layout_height="100dip"
        android:gravity="center"
        android:layout_below="@id/button3"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:src="@drawable/cop3" />

        <TextView
            android:layout_width="150dip"
            android:paddingLeft="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="The new tech world works in different way ..."
            android:textColor="@android:color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button5"
        style="?android:attr/buttonStyle"
        android:layout_width="350dip"
        android:layout_height="100dip"
        android:gravity="center"
        android:layout_below="@id/button4"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:src="@drawable/cop5" />

        <TextView
            android:layout_width="150dip"
            android:paddingLeft="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="Company policy and new cutting edge buzz ..."
            android:textColor="@android:color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button6"
        style="?android:attr/buttonStyle"
        android:layout_width="350dip"
        android:layout_height="100dip"
        android:gravity="center"
        android:layout_below="@id/button5"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:src="@drawable/cop7" />

        <TextView
            android:layout_width="150dip"
            android:paddingLeft="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="Important Notice for the coming update ..."
            android:textColor="@android:color/black" />
    </LinearLayout>



</RelativeLayout>
</ScrollView>